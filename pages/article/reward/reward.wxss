/* pages/article/reward/reward.wxss */
@import '/statics/wxss/common.wxss';
.author{
  text-align: center;
  font-size: 28rpx;
  color: #333;
}
.avatar{
  width: 176rpx;
  height: 176rpx;
  margin: 80rpx 0 30rpx;
}
.reward-integral{
  margin: 104rpx 0 0;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #999;
}
.reward-icon{
  margin: 0 20rpx 0 0;
  padding: 8rpx 4rpx;
  font-size: 18rpx;
  color: #2374e4;
  border: 4rpx solid #2374e4;
  border-radius: 100%;
}
.list-item{
  display: inline-block;
  margin: 30rpx 20rpx 0 0;
  padding: 20rpx 54rpx;
  border-radius: 8rpx;
  color: #16a635;
  border: 4rpx solid #16a635;
}
.list-item.active{
  background: #16a635;
  color: #fff;
}
.reward-num-box{
  margin: 100rpx 10rpx 0;
  font-size: 22rpx;
}
.hor-line{
  height: 1px;
  background: #d9d9d9;
}
.reward-num{
  position: relative;
  top: -12rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 0 20rpx;
  background: #f2f2f2;
}