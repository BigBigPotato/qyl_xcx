/* pages/login.wxss */
@import '/statics/wxss/common.wxss';
page{
  background: #fff;
}
.logo-container{
  margin: 0 0 50rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
  letter-spacing: 2px;
}
.logo{
  display: block;
  width: 194rpx;
  height: 194rpx;
  margin: 80rpx auto 20rpx;
}
.input-style{
  margin: 10rpx 30rpx 0;
  padding: 10rpx 0;
  border-bottom: 1px solid #d9d9d9;
  font-size: 28rpx;
}
.login-btn{
  margin: 30rpx 30rpx 0;
  background: #C13331;
  color: #fff;
  border: none;
  font-size: 32rpx;
  letter-spacing: 4px;
}
.other{
  display: flex;
  margin: 30rpx 30rpx 0;
  color: #C13331;
  font-size: 28rpx;
}