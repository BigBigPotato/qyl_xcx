/* pages/photo/index.wxss */
.search-container,
.search-tag{
  padding: 20rpx 30rpx;
  background: #fff;
}
.search-box{
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  background: #f2f2f2;
  font-size: 28rpx;
  color: #999;
}
.search-form{
  flex: 1;
  margin: 0 0 0 20rpx;
}
.search-tag{
  padding-top: 10rpx;
  border-top: 1px solid #f2f2f2;
}
.tag-item{
  display: inline-block;
  padding: 6rpx 10rpx;
  margin: 10rpx 10rpx 0 0;
  border-radius: 6rpx;
  font: 24rpx bold;
  border: 1px solid;
}
.tag-item.active{
  background: #C13331;
  border-color: #C13331;
  color: #fff;
}
.blue{
  color: #2374e4;
  border-color: #2374e4;
}
.yellow{
  color: rgb(233, 233, 32);
  border-color: rgb(233, 233, 32);
}
.green{
  color: #16a635;
  border-color: #16a635;
}
.red{
  color: #C13331;
  border-color: #C13331;
}
.purple{
  color: purple;
  border-color: purple;
}
.photo-container{
  padding: 0 30rpx 20rpx;
  column-count: 2;
  column-gap: 10rpx;
}
.photo-box{
  position: relative;
  width: 100%;
  height: 100%;
  overflow: auto;
  margin: 20rpx 0 0;
  break-inside: avoid;
}
.photo{
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  background-position: left top;
  background-size: cover;
  background-repeat: no-repeat;
}
.download-icon{
  position: absolute;
  bottom: 0;
  right: 0;
  width: 38rpx;
  height: 32rpx;
  margin: 14rpx 20rpx;
}
.no-msg{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}