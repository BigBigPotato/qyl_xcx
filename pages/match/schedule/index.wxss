/* pages/match/schedule/index.wxss */
.title,
.list-item{
  padding: 20rpx 30rpx;
  background: #453535;
  color: #fff;
  font-size: 24rpx;
}
.title{
  font-weight: bold;
}
.list-item{
  display: flex;
  background: #564242;
  border-bottom: 1px solid rgba(250,250,250,0.3);
}
.list-item:last-child{
  border: none;
}
.time{
  flex: 1;
  color: #bcbcbc;
  font-size: 26rpx;
}
.team-container{
  flex: 2;
  display: flex;
  align-items: center;
}
.team{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.logo{
  width: 40rpx;
  height: 40rpx;
  margin: 0 30rpx;
}
.text-vs{
  font-size: 36rpx;
  font-weight: bold;
}