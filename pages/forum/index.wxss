/* pages/forum/index.wxss */
.forum-item-container{
  padding: 20rpx;
  background: #fff;
}
.forum-item{
  display: flex;
  align-items: center;
  width: 50%;
  margin: 14rpx 0 0;
  font-size: 22rpx;
  color: #999;
}
.item-icon{
  width: 88rpx;
  height: 88rpx;
  border-radius: 6rpx;
  margin: 0 16rpx 0 0;
}
.item-name{
  margin: 0 0 14rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}
.floor-title{
  margin: 20rpx 0 0;
  padding: 20rpx 30rpx;
  color: #2374e4;
  font-size: 22rpx;
  background: #fff;
  border-bottom: 1px solid #f2f2f2;
}