/* components/news/news.wxss */
@import '/statics/wxss/common.wxss';

.news-container{
  background: #ffffff;
}
.news-list{
  padding: 20rpx;
  border-bottom: 1px solid #f2f2f2;
}
.author-box{
  display: flex;
  align-items: center;
  margin: 0 0 20rpx 0;
  font-size: 20rpx;
  color: #999;
}
.avatar{
  width: 48rpx;
  height: 48rpx;
  margin: 0 14rpx 0 0;
  border-radius: 100%;
}
.author-name{
  margin: 0 14rpx 0 0;
  font-size: 28rpx;
  color: #333;
}
.up-time{
  flex-grow: 1;
  display: flex;
  justify-content: flex-end;
}
.one-img .news-title{
  width: 60%;
}
.news-title{
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1.5;
  letter-spacing: 2px;
}
.news-image{
  display: inline-block;
  width: 31%;
  height: 150rpx;
  margin: 0 14rpx 0 0;
  background-size: cover;
  background-repeat: no-repeat;
}
.only-one-img{
  width: 100%;
  height: 300rpx;
}
.video{
  width: 100%;
}
.info-container{
  margin: 20rpx 0 0;
}
.info-box{
  margin: 0 20rpx 0 0;
}
.info-icon{
  width: 18rpx;
  height: 18rpx;
  margin: 0 10rpx 0 0;
}
.info-name{
  font-size: 22rpx;
  color: #999;
}